@model PWalnik.SDManager.DataModel.Models.Customer
@{
    ViewData["Title"] = "Delete";
}
<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Company Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt>
            Adress
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Adress),
            @Html.DisplayFor(model => model.PostalCode),
            @Html.DisplayFor(model => model.City),
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt>
            Phone
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>
    <input type="submit" value="Delete" class="btn btn-default" data-toggle="modal" data-target="#DeleteModal" />|
    <a asp-action="Index" class="btn btn-default">
        <span class="glyphicon glyphicon-home"></span>
    </a>

    <div id="DeleteModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Are you sure?</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <form asp-action="Delete">
                                <input type="submit" value="Yes" class="btn btn-success btn-block" />
                            </form>
                        </div>
                        <div class="col-sm-6">
                            <button type="button" class="btn btn-danger btn-block" data-dismiss="modal">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>