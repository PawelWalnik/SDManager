@model PWalnik.SDManager.DataModel.Models.Employee
@{
    ViewData["Title"] = "EditUser";
}


<form asp-action="EditUser">
    <div class="form-horizontal">
        <h4>Employee</h4>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EmployeeId"/>
        <div class="form-group">
            <label class="col-md-2 control-label">Employee first name</label>
            <div class="col-md-10">
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Employee last name</label>
            <div class="col-md-10">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/> | 
                <a asp-action="Index" class="btn btn-default">
                    <span class="glyphicon glyphicon-home"></span>
                </a>
            </div>
        </div>
    </div>
</form>

